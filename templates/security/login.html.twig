{% extends 'base.html.twig' %}

{% block title %}Log in
{% endblock %}

{% block body %}
	<div class="min-h-[60vh] grid place-items-center">
		<form method="post" class="w-full max-w-md rounded-2xl border border-white/10 bg-neutral-900/70 backdrop-blur p-6 shadow-lg">
			{% if error %}
				<div class="mb-4 rounded-lg border border-red-500/30 bg-red-500/10 px-4 py-3 text-red-200 text-sm">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-4 text-sm text-white/80">
					You are logged in as
					<span class="font-semibold">{{ app.user.userIdentifier }}</span>.
					<a class="underline hover:text-white" href="{{ path('logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="text-xl font-semibold mb-5">Sign in</h1>

			<label for="inputPseudo" class="block text-sm mb-1 text-white/80">Username</label>
			<input type="text" id="inputPseudo" name="pseudo" value="{{ last_username }}" autocomplete="username" required autofocus class="mb-4 w-full rounded-lg border border-white/10 bg-black/40 px-3 py-2 outline-none focus:border-white/30" placeholder="wizard_42">

			<label for="inputPassword" class="block text-sm mb-1 text-white/80">Password</label>
			<input type="password" id="inputPassword" name="password" autocomplete="current-password" required class="mb-4 w-full rounded-lg border border-white/10 bg-black/40 px-3 py-2 outline-none focus:border-white/30" placeholder="••••••••">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="mb-5 flex items-center justify-between gap-2">
				<label class="inline-flex items-center gap-2 text-sm text-white/80 select-none">
					<input type="checkbox" name="_remember_me" class="rounded border-white/20 bg-black/40">
					Remember me
				</label>

				<a href="{{ path('register') }}" class="text-sm underline text-white/80 hover:text-white">Create account</a>
			</div>

			<button type="submit" class="w-full rounded-lg bg-white text-black py-2.5 font-medium hover:bg-white/90 transition">
				Sign in
			</button>
		</form>
	</div>
{% endblock %}

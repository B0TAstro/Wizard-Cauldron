{% extends 'base.html.twig' %}

{% block title %}Create account
{% endblock %}

{% block body %}
	<div class="min-h-[60vh] grid place-items-center">
		<div class="w-full max-w-md rounded-2xl border border-white/10 bg-neutral-900/70 backdrop-blur p-6 shadow-lg">
			<h1 class="text-xl font-semibold mb-5">Create your account</h1>

			{% if form_errors(registrationForm) is not empty %}
				<div class="mb-4 rounded-lg border border-red-500/30 bg-red-500/10 px-4 py-3 text-red-200 text-sm">
					{{ form_errors(registrationForm) }}
				</div>
			{% endif %}

			{{ form_start(registrationForm, { attr: { class: 'space-y-4' } }) }}

			<div>
				{{ form_label(registrationForm.pseudo, 'Username', { label_attr: { class: 'block text-sm mb-1 text-white/80' } }) }}
				{{ form_widget(registrationForm.pseudo, {
          attr: { class: 'w-full rounded-lg border border-white/10 bg-black/40 px-3 py-2 outline-none focus:border-white/30', placeholder: 'wizard_42', autocomplete: 'username' }
        }) }}
				{% if form_errors(registrationForm.pseudo) %}
					<p class="mt-1 text-xs text-red-300">{{ form_errors(registrationForm.pseudo) }}</p>
				{% endif %}
			</div>

			<div>
				{{ form_label(registrationForm.email, 'Email', { label_attr: { class: 'block text-sm mb-1 text-white/80' } }) }}
				{{ form_widget(registrationForm.email, {
          attr: { class: 'w-full rounded-lg border border-white/10 bg-black/40 px-3 py-2 outline-none focus:border-white/30', placeholder: '••••••@email.com', autocomplete: 'email' }
        }) }}
				{% if form_errors(registrationForm.email) %}
					<p class="mt-1 text-xs text-red-300">{{ form_errors(registrationForm.email) }}</p>
				{% endif %}
			</div>

			<div>
				{{ form_label(registrationForm.plainPassword, 'Password', { label_attr: { class: 'block text-sm mb-1 text-white/80' } }) }}
				{{ form_widget(registrationForm.plainPassword, {
          attr: { class: 'w-full rounded-lg border border-white/10 bg-black/40 px-3 py-2 outline-none focus:border-white/30', placeholder: '••••••••', autocomplete: 'new-password' }
        }) }}
				{% if form_errors(registrationForm.plainPassword) %}
					<p class="mt-1 text-xs text-red-300">{{ form_errors(registrationForm.plainPassword) }}</p>
				{% endif %}
			</div>

			<button type="submit" class="w-full rounded-lg bg-white text-black py-2.5 font-medium hover:bg-white/90 transition">
				Create account
			</button>

			{{ form_end(registrationForm) }}

			<p class="mt-4 text-center text-sm text-white/70">
				Already have an account?
				<a href="{{ path('login') }}" class="underline hover:text-white">Sign in</a>
			</p>
		</div>
	</div>
{% endblock %}

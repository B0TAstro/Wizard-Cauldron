{% extends 'base.html.twig' %}

{% block title %}Spell
{% endblock %}

{% block body %}
	<h1>Spell</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ spell.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ spell.name }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ spell.slug }}</td>
			</tr>
			<tr>
				<th>Rarity</th>
				<td>{{ spell.rarity }}</td>
			</tr>
			<tr>
				<th>ImageUrl</th>
				<td>{{ spell.imageUrl }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ spell.description }}</td>
			</tr>
			<tr>
				<th>IsActive</th>
				<td>{{ spell.isActive ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ spell.createdAt ? spell.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('admin_spell_index') }}">back to list</a>

	<a href="{{ path('admin_spell_edit', {'id': spell.id}) }}">edit</a>

	{{ include('admin/spells/_delete_form.html.twig') }}
{% endblock %}
